{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Performances{% endblock %}

{% block body %}

    <div class="container-fluid my-5 px-5">
        <h1 class="text-center">Gestion des spectacles</h1>
        <div class="row">
            <div class="col-lg-10">
                <table class="table table-hover text-dark">
                    <thead>
                    <tr>
                        <td>Id</td>
                        <td>Titre</td>
                        <td>Date</td>
                        <td>Heure</td>
                        <td>Actions</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for performance in performances %}
                            <td>{{ performance.id }}</td>
                            <td>{{ performance.title }}</td>
                            <td>{{ performance.date | date('d/m/Y') }}</td>
                            <td>{{ performance.time | date('H:i') }}</td>
                            <td>
                                <a href="{{ path('admin_performance_edit', {'id' : performance.id}) }}" class="btn btn-info"><i class="fas fa-pen"></i></a>
                                <a href="{{ path('admin_performance_delete', {'id' : performance.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-2">
                <div class="card bg-light mb-3">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <h4 class="card-title">Ajouter un spectacle</h4>
                        <p class="card-text text-center"><a href="{{ path('admin_performance_new') }}" class="badge badge-info"><i class="fas fa-exclamation"></i> NEW</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
