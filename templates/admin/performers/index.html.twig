{% extends 'admin/base.html.twig' %}

{% block title %}Performers{% endblock %}

{% block body %}

    <div class="container-fluid my-5 px-5">
        <h1 class="text-center">Gestion des Performers</h1>
        <div class="row">
            <div class="col-lg-10">
                <table class="table table-hover text-dark">
                    <thead>
                    <tr>
                        <td>Id</td>
                        <td>Identit√©</td>
                        <td>Avatar</td>
                        <td>Biographie</td>
                        <td>Actions</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for performer in performers %}
                            <td>{{ performer.id }}</td>
                            <td>{{ performer.firstname }} {{ performer.lastname }}</td>
                            <td><img class="img-fluid" src="/uploads/performer/avatar/{{ performer.avatar }}"></td>
                            <td>{{ performer.biography }}</td>
                            <td>
                                <a href="{{ path('admin_performer_edit', {'id' : performer.id}) }}" class="btn btn-info"><i class="fas fa-pen"></i></a>
                                <a href="{{ path('admin_performer_delete', {'id' : performer.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-2">
                <div class="card bg-light mb-3">
                    <div class="card-header"></div>
                    <div class="card-body">
                        <h4 class="card-title">Ajouter un performer</h4>
                        <p class="card-text text-center"><a href="{{ path('admin_performer_new') }}" class="badge badge-info"><i class="fas fa-exclamation"></i> NEW</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
