{% extends 'admin/base.html.twig' %}

{% block title %}Prix des entr√©es{% endblock %}

{% block body %}

    <div class="container my-5 px-5">
        <h1 class="text-center">Gestion des Prix</h1>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover text-dark">
                    <thead>
                    <tr>
                        <th></th>
                        {% for visitor in visitors %}
                            <th>{{ visitor.type }}</th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for period in periods %}
                        <tr>
                            <td>{{ period.name }}</td>
                            {% for price in prices if price.period.name == period.name %}
                                <td>{{ price.price}} <i class="fas fa-euro-sign"></i>
                                    <a href="{{ path('admin_price_edit', {'id' : price.id}) }}"><i class="fas fa-pen ml-3"></i></a></td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
